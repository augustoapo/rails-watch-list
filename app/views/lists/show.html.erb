<div class="container">
<h1 class = "d-flex justify-content-center">Info about List</h1>
<br>
<p><b> Name:     </b><%= @list.name %> </p>
<br>
<% @list.bookmarks.each do |bookmark|  %>
  <p><%=  bookmark.movie.title  %> <%=  bookmark.comment  %> 
    <%= link_to list_bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } do %> 
     <i class="far fa-trash-alt"></i>  
  <% end %>                            
  </p>
<% end %>
<%= link_to 'Back', lists_path, class: "btn btn-warning"  %>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"  %>


<%#= link_to 'Google', 'https://google.com', class: 'link' %>
</div>